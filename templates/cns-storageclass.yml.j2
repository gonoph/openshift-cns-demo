---
apiVersion: storage.k8s.io/v1beta1
kind: StorageClass
metadata:
  name: glusterfs-cluster1
  annotations:
    storageclass.beta.kubernetes.io/is-default-class: "true"
provisioner: kubernetes.io/glusterfs
parameters:
  resturl: "http://heketi-storage.{{ openshift_master_default_subdomain }}"
  restuser: "admin"
  volumetype: "replicate:3"
  clusterid: "{{ heketi_clusterid }}"
